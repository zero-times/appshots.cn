{
  "name": "appshots",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel -r run dev",
    "dev:client": "pnpm --filter @appshots/shared build && pnpm --filter @appshots/client dev",
    "dev:server": "pnpm --filter @appshots/shared build && pnpm --filter @appshots/server dev",
    "build": "pnpm -r run build",
    "typecheck": "pnpm -r run typecheck",
    "skill:export": "pnpm --filter @appshots/server exec tsx ../scripts/skill-export.ts",
    "test:skill-cli": "node ./scripts/test-skill-export-smoke.mjs"
  },
  "devDependencies": {
    "typescript": "^5.7.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3", "esbuild", "sharp"]
  }
}
